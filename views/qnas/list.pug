extends ../layout

block content
    h2.m-4 문의게시판 관리
    table.table.text-center
        thead
            tr
                th(scope="col") 유저명
                th(scope="col") 이름
                th(scope="col") 작성일
                th(scope="col") 제목
                th(scope="col") 핸드폰
                th(scope="col") 등급
                th(scope="col") 관리
        tbody
            each user in users
                each qna in qnas
                tr
                    th(scope="row") #{user.u_id}
                    th(scope="row") #{user.name}
                    th(scope="row") #{qna.post_time.toLocaleDateString("ko")}
                    th(scope="row") #{qna.title}
                    th(scope="row") #{user.phone}
                    th(scope="row") #{user.permission}
                    th(scope="row")
                        a.btn.btn-sm.btn-outline-dark.me-1(href=`/qnas/${user.u_id}/detail.do`) 상세
                        a.btn.btn-sm.btn-outline-danger 삭제