extends ../layout

block content
    h2.m-4 유저관리
    table.table.text-center
        thead
            tr
                th(scope="col") 유저명
                th(scope="col") 이름
                th(scope="col") 생년월일
                th(scope="col") 가입일
                th(scope="col") 주소
                th(scope="col") 핸드폰
                th(scope="col") 마일리지
                th(scope="col") 등급
                th(scope="col") 관리

        tbody
            each user in users
                tr
                    td(scope="row") #{user.u_id}
                    td(scope="row") #{user.name}
                    td(scope="row") #{user.birth}
                    td(scope="row") #{user.post_time.toLocaleDateString("ko")}
                    td(scope="row") #{user.address}
                    td(scope="row") #{user.phone}
                    td(scope="row") 마일리지
                    td(scope="row") #{user.permission}
                    td(scope="row")
                        a.btn.btn-sm.btn-outline-dark.me-1(href=`/users/${user.u_id}/detail.do`) 상세
                        a.btn.btn-sm.btn-outline-danger(href=`/users/${user.u_id}/delete.do`) 삭제

    -const pageVo = users.pageVo;
    include ../pagination