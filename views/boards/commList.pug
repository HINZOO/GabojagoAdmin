extends ../layout

block content
    h2.m-4 가보자고 게시판 관리
    table.table.text-center
        thead
            tr
                th(scope="col") 글번호
                th(scope="col") 제목
                th(scope="col") 작성일
                th(scope="col") 관리

        tbody
            each comm in comms
                tr
                    th(scope="row") #{comm.c_id}
                    th(scope="row")
                        a(href=`/trips/${comm.c_id}/detail.do`).link-danger.text-dark #{comm.title}
                    th(scope="row") #{comm.post_time.toLocaleString("ko")}
                    th(scope="row")
                        a.btn.btn-sm.btn-outline-dark.me-1(href=`/comms/${comm.c_id}/detail.do`) 상세
                        a.btn.btn-sm.btn-outline-danger(href=`/comms/${comm.c_id}/delete.do`) 삭제

    -const pageVo = comms.pageVo;
    include ../pagination